<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <import type="android.text.TextUtils"/>
        <variable
            name="viewModel"
            type="com.valsoft.cardiodiary.presentation.viewmodel.diary.questionary.SymptomFormViewModel"/>
    </data>
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/symptom_control"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heart_pain"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nature_of_pain"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp">
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/compressing"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setNatureOfHeartPain(@string/compressing)}"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aching"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setNatureOfHeartPain(@string/aching)}"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/barbed"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setNatureOfHeartPain(@string/barbed)}"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pressing"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setNatureOfHeartPain(@string/pressing)}"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/burning"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setNatureOfHeartPain(@string/burning)}"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/another_type"
                    android:textSize="16sp"
                    android:onCheckedChanged="@{(view, checked) -> checked ? viewModel.setAnotherTypeOfHeart(true): viewModel.setAnotherTypeOfHeart(false)}"
                    />
            </RadioGroup>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/description"
                android:visibility="@{viewModel.anotherTypeOfHeart ? View.VISIBLE : View.GONE}">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:afterTextChanged="@{(editable) -> viewModel.setNatureOfHeartPain(String.valueOf(editable))}"
                    />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/localization"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
            />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp">
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/left_half"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setLocalization(@string/left_half)}"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/behind_the_chest"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setLocalization(@string/behind_the_chest)}"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/top_heart"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setLocalization(@string/top_heart)}"/>
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/irradiation"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp">
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/left_hand"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setIrradiation(@string/left_hand)}"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/left_shoulder_blade"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setIrradiation(@string/left_shoulder_blade)}"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/right_half"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setIrradiation(@string/right_half)}"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/larynx"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setIrradiation(@string/larynx)}"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jaw"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setIrradiation(@string/jaw)}"/>
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/intensity"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp">
                <SeekBar
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:max="10"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:onProgressChanged="@{(view, progress, fromuser) -> viewModel.setHeartPainIntensity(progress)}"
                    />
                <TextView
                    android:id="@+id/timeCounter"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="@{String.valueOf(viewModel.heartPainIntensity)}"
                    android:background="@drawable/background_seekbar_counter"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="24dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/duration"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp">
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_five"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setHeartPainDuration(5)}"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from_five"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setHeartPainDuration(10)}"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more_thirty"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setHeartPainDuration(30)}"/>
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/condition"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp">
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exercise"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setHeartPainCondition(@string/exercise)}"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/psycho_stress"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setHeartPainCondition(@string/psycho_stress)}"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/turning_body"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setHeartPainCondition(@string/turning_body)}"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/drinking_alcohol"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setHeartPainCondition(@string/drinking_alcohol)}"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calm"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setHeartPainCondition(@string/calm)}"/>
            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/interruptions"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp">
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Так(ЧСС за хв.)"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setHeartInterruptions(true)}"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ні"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setHeartInterruptions(false)}"
                    />
            </RadioGroup>
            <android.support.design.widget.TextInputLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="@string/frequency"
                android:visibility="@{viewModel.heartInterruptions ? View.VISIBLE : View.GONE}">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:inputType="number"
                    android:maxLength="3"
                    android:afterTextChanged="@{(editable) -> viewModel.setHeartInterruptionFrequency(String.valueOf(editable))}"
                    />
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/palpitation"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp">
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Так(ЧСС за хв.)"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setPalpitation(true)}"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ні"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setPalpitation(false)}"
                    />
            </RadioGroup>
            <android.support.design.widget.TextInputLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="@string/frequency"
                android:visibility="@{viewModel.palpitation ? View.VISIBLE : View.GONE}">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:afterTextChanged="@{(editable) -> viewModel.setPalpitationFrequency(String.valueOf(editable))}"
                    android:inputType="number"
                    android:maxLength="3"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/headache"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp">
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Так(тривалість)"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setHeadache(true)}"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ні"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setHeadache(false)}"/>
            </RadioGroup>
            <android.support.design.widget.TextInputLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="Тривалість(хв.)"
                android:visibility="@{viewModel.headache ? View.VISIBLE : View.GONE}">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:inputType="number"
                    android:afterTextChanged="@{(editable) -> viewModel.setHeadacheDuration(String.valueOf(editable))}"
                    />
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dyspnea"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp">
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expiratory"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setDyspnea(@string/expiratory)}"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inspiratory"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setDyspnea(@string/inspiratory)}"
                    />
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/condition"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp">
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exercise"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setConditionOfDyspnea(@string/exercise)}"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/psycho_stress"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setConditionOfDyspnea(@string/psycho_stress)}"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calm"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setConditionOfDyspnea(@string/calm)}"/>
            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dizziness"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp">
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Так(АТ, ЧСС за хв.)"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setDizziness(true)}"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ні"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setDizziness(false)}"/>
            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="@{viewModel.dizziness ? View.VISIBLE : View.GONE}">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/systolic"
                    android:layout_weight="0.3">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:inputType="number"
                        android:maxLength="3"
                        android:afterTextChanged="@{(editable) -> viewModel.setDizzinesSystolic(String.valueOf(editable))}"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/diastolic"
                    android:layout_weight="0.3">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:inputType="number"
                        android:maxLength="3"
                        android:afterTextChanged="@{(editable) -> viewModel.setDizzinesDiastolic(String.valueOf(editable))}"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/frequency"
                    android:layout_weight="0.3">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:inputType="number"
                        android:maxLength="3"
                        android:afterTextChanged="@{(editable) -> viewModel.setDizzinesFrequency(String.valueOf(editable))}"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loss_of_consciousness"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp">
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Так(АТ, ЧСС за хв.)"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setLossOfConsciousness(true)}"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ні"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setLossOfConsciousness(false)}"/>
            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="@{viewModel.lossOfConsciousness ? View.VISIBLE : View.GONE}">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/systolic"
                    android:layout_weight="0.3">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:inputType="number"
                        android:maxLength="3"
                        android:afterTextChanged="@{(editable) -> viewModel.setConsciousnessSystolic(String.valueOf(editable))}"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/diastolic"
                    android:layout_weight="0.3"
                    android:maxLength="3">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:inputType="number"
                        android:maxLength="3"
                        android:afterTextChanged="@{(editable) -> viewModel.setConsciousnessDiastolic(String.valueOf(editable))}"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/frequency"
                    android:layout_weight="0.3">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:inputType="number"
                        android:maxLength="3"
                        android:text="@={viewModel.consciousnessFrequency}"
                        android:afterTextChanged="@{(editable) -> viewModel.setConsciousnessFrequency(String.valueOf(editable))}"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edema"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp">
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/symmetric"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setEdema(@string/symmetric)}"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/asymmetric"
                    android:textSize="16sp"
                    android:onClick="@{() -> viewModel.setEdema(@string/asymmetric)}"/>
            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"
                android:layout_marginBottom="8dp"/>
            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/save"
                android:onClick="@{() -> viewModel.saveData()}"
                />
        </LinearLayout>

    </ScrollView>
</layout>
